{
  "compilerOptions": {
    "target": "ES5",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "types": ["@types"]
    },
    "declaration": true,
    "declarationDir": "../webview-dist",
    "rootDir": "./"
  },
  "include": ["./"],
  "typedocOptions": {
    // Comments are supported, like tsconfig.json
    "entryPoints": "index.ts",
    "out": "../api-docs",
    "plugin": ["typedoc-plugin-markdown"]
  }
}
